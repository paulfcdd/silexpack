{
	"name": "silexpack",
	"description": "Lite MVC micro-framework, based on Silex",
	"license": "MIT",
	"autors": [
		{
			"name": "Paul Novikov",
			"email": "paulfcdd@gmail.com"
		}
	],
	"require": {
		"silex/silex": "~2.0",
		"twig/twig": "~1.26.1",
		"symfony/twig-bridge": "~3.1.5",
		"monolog/monolog": "~1.21.0",
		"symfony/asset": "~3.1.5",
		"symfony/yaml": "~3.1.5",
		"rpodwika/yaml-config-service-provider": "~1.0.1",
		"doctrine/dbal": "~2.5.5",
		"symfony/security": "~3.1.5",
		"incenteev/composer-parameter-handler": "~2.0"
	},
	"scripts": {
		"post-install-cmd": [
			"Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
		],
		"post-update-cmd": [
			"Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
		]
	},
	"extra": {
		"incenteev-parameters": {
			"file": "config/config.yml",
			"dist-file": "config/config.yml.dist",
			"parameter-key": "config",
			"keep-outdated": true
		}
	}
}
